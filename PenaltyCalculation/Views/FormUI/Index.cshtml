@model PenaltyCalculation.Models.ViewModel.CountryViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="text-align:center;">
    <form class="" style="margin-top:5%;" action="/" method="post">
        <div class="form-group">
            <label><i class="fas fa-clock"></i> Check out date of the Book</label>
            @*<input class="form-control" type="date" name="timeForCheckedOut">*@
            <input name="timeForCheckedOut" class="form-control" type="text" placeholder="Choose a date" onfocus="(this.type='date')" onblur="if(this.value==''){this.type='text'}">
        </div>
        <div class="form-group">
            <label><i class="fas fa-clock"></i> Return date of the Book</label>
            <input name="timeForReturn" class="form-control" type="text" placeholder="Choose a date" onfocus="(this.type='date')" onblur="if(this.value==''){this.type='text'}">
            @*<input class="form-control" type="date" name="timeForReturn">*@
        </div>
        <div class="form-group">
            <label><i class="fas fa-flag"></i> Your Country</label>
            @Html.DropDownListFor(m => m.Country.countryId, (SelectList)ViewBag.CountrySelectList, "Choose a country", new { @class = "form-control" })
        </div>
        <br>
        <button style="width:100%" type="submit" class="btn btn-primary">Calculate</button>
    </form>
    <br />
    <center>
    <label style="color:darkred;">@ViewBag.Show</label>
    </center>
</div>

